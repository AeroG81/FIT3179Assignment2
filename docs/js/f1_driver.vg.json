{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/AeroG81/FIT3179Assignment2/main/Dataset/drivers.csv"
  },
  "background": "#413e3e",
  "config": {
    "title": {
      "color": "#ffffff"
    },
    "legend": {
      "titleColor": "#ffffff",
      "labelColor": "#ffffff",
      "labelFont": "Source Sans Pro"
    },
    "axis": {
      "titleColor": "#ffffff",
      "labelColor": "#ffffff",
      "gridColor": "#7a7a7a",
      "labelFontSize": 12,
      "labelAngle": -45
    },
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  },
  "vconcat": [
    {
      "width": 700,
      "height": 200,
      "encoding": {
        "x": {
          "field": "nationality",
          "sort": "-y",
          "title": "Nationality"
        },
        "y": { "aggregate": "count", "title": "Number of Drivers" },
        "tooltip": [
          {
            "field": "nationality",
            "type": "nominal",
            "title": "Nationality"
          },
          {
            "aggregate": "count",
            "type": "quantitative",
            "title": "Number of Drivers"
          }
        ]
      },
      "layer": [
        {
          "mark": "bar",
          "params": [
            {
              "name": "nation",
              "select": {
                "type": "point",
                "fields": ["nationality"],
                "on": "click"
              }
            },
            {
              "name": "highlight",
              "select": {
                "type": "point",
                "fields": ["nationality"],
                "on": "mouseover"
              }
            }
          ],
          "encoding": {
            "color": {
              "value": "#e44242"
            },
            "opacity":{
              "condition": [{
                "param": "driver_hover", 
                "value": 1
              }
            ],
              "value": 0.3
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "baseline": "middle",
            "dy": -10,
            "color": "#ffffff"
          },
          "encoding": {
            "text": { "aggregate": "count", "type": "quantitative" }
          }
        }
      ]
    },
    {
      "width": 700,
      "height": 400,
      "transform": [
        { "calculate": "ceil (datum.count/20)", "as": "col" },
        { "calculate": "datum.count - datum.col*20", "as": "row" }
      ],
      "mark": { "type": "point", "filled": true },
      "params": [
        {
          "name": "driver_hover",
          "select": {
            "type": "point",
            "fields": ["nationality"],
            "on": "mouseover"
          }
        }
      ],
      "encoding": {
        "x": { "field": "col", "type": "ordinal", "axis": null },
        "y": { "field": "row", "type": "ordinal", "axis": null },
        "tooltip": [
          { "field": "nationality", "type": "nominal", "title": "Nationality" },
          { "field": "forename", "type": "nominal", "title": "Forename" },
          { "field": "surname", "type": "nominal", "title": "Surname" },
          { "field": "driverId", "type": "nominal", "title": "Driver ID" }
        ],
        "shape": {
          "value": "M1.7 -1.7h-0.8c0.3 -0.2 0.6 -0.5 0.6 -0.9c0 -0.6 -0.4 -1 -1 -1c-0.6 0 -1 0.4 -1 1c0 0.4 0.2 0.7 0.6 0.9h-0.8c-0.4 0 -0.7 0.3 -0.7 0.6v1.9c0 0.3 0.3 0.6 0.6 0.6h0.2c0 0 0 0.1 0 0.1v1.9c0 0.3 0.2 0.6 0.3 0.6h1.3c0.2 0 0.3 -0.3 0.3 -0.6v-1.8c0 0 0 -0.1 0 -0.1h0.2c0.3 0 0.6 -0.3 0.6 -0.6v-2c0.2 -0.3 -0.1 -0.6 -0.4 -0.6z"
        },
        "color": {
          "condition": { "param": "nation", "value": "rgb(194,81,64)" },
          "value": "rgb(167,165,156)"
        },
        "opacity": {
          "condition": [
            {
              "param": "highlight",
              "value": 1
            }
          ],
          "value": 0.2
        },
        "size": { "value": 25 }
      }
    }
  ]
}
