{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bump chart",
  "width": 620,
  "height": 400,
  "background": "#413e3e",
  "config": {
    "title": {
      "color": "#ffffff"
    },
    "legend": {
      "titleColor": "#ffffff",
      "labelColor": "#ffffff",
      "labelFont": "Source Sans Pro"
    },
    "axis": {
      "titleColor": "#ffffff",
      "labelColor": "#ffffff",
      "gridColor": "#7a7a7a"
    },
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/AeroG81/FIT3179Assignment2/main/Dataset/driver_standings_per_race.csv"
  },
  "params": [
    {
      "name": "year_selection",
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2020,
        "step": 1,
        "name": "Year selection: "
      },
      "value": 1960
    },
    {
      "name": "highlight",
      "select": {
        "type": "point",
        "fields": ["driverId"],
        "on": "mouseover"
      }
    }
  ],
  "mark": {
    "type": "line",
    "point": {
      "size": 100,
      "filled": true
    }
  },
  "encoding": {
    "x": {
      "field": "round",
      "type": "quantitative",
      "axis": {
        "tickCount": 20,
        "tickMinStep": 1
      },
      "scale": {
        "round": true,
        "nice": true,
        "domainMin": 1
      }
    },
    "y": {
      "field": "position",
      "type": "quantitative",
      "axis": {
        "grid": false,
        "tickCount": 15,
        "tickMinStep": 1
      },
      "scale": {
        "round": true,
        "nice": true,
        "domainMin": 1
      }
    },
    "tooltip": [
      { "field": "driver_name", "type": "nominal", "title": "Driver" },
      { "field": "driverId", "type": "ordinal", "title": "DriverId" },
      { "field": "name", "type": "nominal", "title": "Circuit" }
    ],
    "color": {
      "field": "driver_name",
      "type": "nominal",
      "scale": {
        "scheme": "tableau20"
      },
      "title": "Driver"
    },
    "opacity": {
      "condition": [
        {
          "param": "highlight",
          "value": 1
        }
      ],
      "value": 0.2
    }
  },
  "transform": [{ "filter": "datum.year == year_selection" }]
}
